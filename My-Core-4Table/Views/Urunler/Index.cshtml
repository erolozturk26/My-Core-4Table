@model IEnumerable<My_Core_4Table.Models.Urunler>

@{
    ViewData["Title"] = "Ürün Listeleme";
}


@{
    ViewData["Title2"] = "Ürün";
}







<table class="table table-bordered table-hover text-center">
      <p>
    <a asp-action="Create" class="btn btn-danger ms-2 mb-2 text-white">Yeni Ürün Oluştur</a>
      </p>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ADI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FIYAT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MARKA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EKOZELLIKLER)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ADI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FIYAT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MARKA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EKOZELLIKLER)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-success text-white"><i class="fa fa-pencil"></i> DÜZENLE</a>
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger text-white"><i class="fa fa-trash"></i> KALDIR</a>
            </td>
        </tr>
}
    </tbody>
</table>
