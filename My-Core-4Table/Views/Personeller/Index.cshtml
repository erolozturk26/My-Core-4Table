@model IEnumerable<My_Core_4Table.Models.Personeller>

@{
    ViewData["Title"] = "Personel Listeleme";
}

@{
    ViewData["Title2"] = "Personel";
}





<table class="table table-bordered table-hover text-center">
      <p>
    <a asp-action="Create" class="btn btn-danger ms-2 mb-2 text-white">Yeni Personel Oluştur</a>
      </p>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ADSOYAD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YAS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CINSIYET)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TOPLAMCALISMA)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ADSOYAD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YAS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CINSIYET)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TOPLAMCALISMA)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-success text-white"><i class="fa fa-pencil"></i> DÜZENLE</a>
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger text-white"><i class="fa fa-trash"></i> KALDIR</a>
            </td>
        </tr>
}
    </tbody>
</table>
